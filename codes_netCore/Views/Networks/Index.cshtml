@model IEnumerable<codes_netCore.Models.Network>

<div class="row pl-3">
    <label class="control-label mr-2">Network: </label>
    <div class="text-center">
        <ul class="list-group">
            @Html.Hidden("HexSaver", "0")
            @Html.Hidden("NetworkIdSaver", "0")
            @foreach (var item in Model)
            {
                <li onclick="NetworkSelected(this)"
                    class="list-group-item"
                    style="background-color:@item.Color.Hex"
                    id="@item.Id">
                    @item.Name
                </li>
            }

        </ul>
    </div>
</div>
